---
export interface Props {
  class?: string;
}

const { class: className = '' } = Astro.props;
---

<header class={`header ${className}`.trim()}>
  <nav class="nav">
    <a href="/" class="logo">Aesso</a>
    <a href="mailto:hello@aesso.com" class="email">hello@aesso.com â†—</a>
  </nav>
</header>

<style>
  .header {
    position: fixed;
    top: var(--header-top, var(--spacing-page));
    left: var(--header-horizontal, var(--spacing-page));
    right: var(--header-horizontal, var(--spacing-page));
    z-index: var(--z-header);
  }

  .nav {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
  }

  .logo,
  .email {
    font-size: var(--text-sm);
    line-height: var(--leading-tight);
    color: var(--color-text);
    position: relative;
    z-index: 2;
  }

  .logo:hover,
  .email:hover {
    opacity: 0.7;
  }

  /* Mobile styles */
  @media (max-width: 768px) {
    .header {
      --header-top: var(--spacing-page-mobile-top);
      --header-horizontal: var(--spacing-page-mobile);
    }
  }

  /* Small mobile styles */
  @media (max-width: 480px) {
    .logo,
    .email {
      font-size: var(--text-xs);
    }
  }
</style>