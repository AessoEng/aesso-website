---
export interface Props {
  title: string;
  description: string;
  heroImage: string;
  heroAlt: string;
}

import BaseLayout from '../layouts/BaseLayout.astro';

const { title, description, heroImage, heroAlt } = Astro.props;
const currentYear = new Date().getFullYear();
---

<BaseLayout title={`${title} - Aesso`} description={description}>
  <header class="header">
    <nav class="nav">
      <a href="/" class="logo">Aesso</a>
      <a href="mailto:hello@aesso.com" class="email">hello@aesso.com ↗</a>
    </nav>
  </header>

  <main class="main">
    <div class="project-hero">
      <img src={heroImage} alt={heroAlt} loading="eager">
    </div>

    <section class="project-info">
      <h1 class="project-title">{title}</h1>
      <p class="project-description">{description}</p>
    </section>

    <section class="project-content">
      <slot />
    </section>
  </main>

  <section class="pre-footer">
    <div class="pre-footer-content">
      <h2 class="pre-footer-heading">
        Based in Paris.<br>
        Get in Touch at <a href="mailto:hello@aesso.com">hello@aesso.com ↗</a>
      </h2>
      <div class="pre-footer-text">
        <p>We believe that the best user experiences are intuitive, beautiful and a joy to use. These principles are reflected in our work through an instinctual approach to design, and a meticulous attention to detail.</p>
        <p>Our multidisciplinary team of senior and principal designers can spearhead projects of any scale, or work within your existing team to create digital products, branding, apps, websites and more.</p>
      </div>
    </div>
  </section>

  <footer class="footer">
    <div class="footer-content">
      <p class="copyright">© {currentYear} Aesso, LLC. All rights reserved.</p>
      <p class="footer-social">Follow us on <a href="https://instagram.com/aessostudio" target="_blank" rel="noopener">Instagram</a> and <a href="http://twitter.com/aessostudio" target="_blank" rel="noopener">Twitter</a>.</p>
    </div>
  </footer>
</BaseLayout>

<style>
  /* Project-specific styles only */

  .project-hero {
    width: 100%;
    height: 80vh;
    min-height: 400px;
    overflow: hidden;
    background: #f5f5f5;
  }

  .project-hero img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .project-info {
    padding: var(--spacing-xl) var(--page-margin);
    border-bottom: 1px solid #eee;
  }

  .project-title {
    font-size: clamp(2rem, 5vw, 3rem);
    margin-bottom: var(--spacing-md);
  }

  .project-description {
    font-size: 1.25rem;
    color: var(--color-gray);
    max-width: 800px;
  }

  .project-content {
    padding: var(--spacing-xl) var(--page-margin);
  }

  /* Override for project pages - add top margin since pre-footer border is at top */
  .pre-footer {
    margin-top: var(--spacing-xxl);
  }

  @media (max-width: 768px) {
    .project-hero {
      height: 50vh;
    }

    .project-title {
      font-size: 2rem;
    }

    .project-description {
      font-size: 1.125rem;
    }
  }
</style>
