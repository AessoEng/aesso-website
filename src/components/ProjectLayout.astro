---
export interface Props {
  title: string;
  description: string;
  heroImage: string;
  heroAlt: string;
}

import BaseLayout from '../layouts/BaseLayout.astro';

const { title, description, heroImage, heroAlt } = Astro.props;
const currentYear = new Date().getFullYear();
---

<BaseLayout title={`${title} - Aesso`} description={description}>
  <header class="header">
    <nav class="nav">
      <a href="/" class="logo">Aesso</a>
      <a href="mailto:hello@aesso.com" class="email">hello@aesso.com ↗</a>
    </nav>
  </header>

  <main class="main">
    <div class="project-hero">
      <img src={heroImage} alt={heroAlt} loading="eager">
    </div>

    <section class="project-info">
      <h1 class="project-title">{title}</h1>
      <p class="project-description">{description}</p>
    </section>

    <section class="project-content">
      <slot />
    </section>
  </main>

  <section class="pre-footer">
    <div class="pre-footer-content">
      <h2 class="pre-footer-heading">
        Based in Paris.<br>
        Get in Touch at <a href="mailto:hello@aesso.com">hello@aesso.com ↗</a>
      </h2>
      <div class="pre-footer-text">
        <p>We believe that the best user experiences are intuitive, beautiful and a joy to use. These principles are reflected in our work through an instinctual approach to design, and a meticulous attention to detail.</p>
        <p>Our multidisciplinary team of senior and principal designers can spearhead projects of any scale, or work within your existing team to create digital products, branding, apps, websites and more.</p>
      </div>
    </div>
  </section>

  <footer class="footer">
    <div class="footer-content">
      <p class="copyright">© {currentYear} Aesso, LLC. All rights reserved.</p>
      <p class="footer-social">Follow us on <a href="https://instagram.com/aessostudio" target="_blank" rel="noopener">Instagram</a> and <a href="http://twitter.com/aessostudio" target="_blank" rel="noopener">Twitter</a>.</p>
    </div>
  </footer>
</BaseLayout>

<style>
  /* Header styles matching PageLayout */
  .header {
    position: fixed;
    top: var(--page-margin);
    left: var(--page-margin);
    right: var(--page-margin);
    z-index: 100;
  }

  .nav {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
  }

  .logo,
  .email {
    font-size: 0.875rem;
    line-height: 1.125rem;
    color: var(--color-text);
    position: relative;
    z-index: 2;
  }

  .logo:hover,
  .email:hover {
    opacity: 0.7;
  }

  /* Main content with reduced top padding */
  .main {
    padding-top: calc(var(--page-margin) * 2 + var(--spacing-md)); /* Reduced from larger spacing */
  }

  .project-hero {
    width: 100%;
    height: 80vh;
    min-height: 400px;
    overflow: hidden;
    background: #f5f5f5;
  }

  .project-hero img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .project-info {
    padding: var(--spacing-xl) var(--page-margin);
    border-bottom: 1px solid #eee;
  }

  .project-title {
    font-size: clamp(2rem, 5vw, 3rem);
    margin-bottom: var(--spacing-md);
  }

  .project-description {
    font-size: 1.25rem;
    color: var(--color-gray);
    max-width: 800px;
  }

  .project-content {
    padding: var(--spacing-xl) var(--page-margin);
  }

  /* Pre-footer styles */
  .pre-footer {
    margin-top: var(--spacing-xxl);
    padding: 2.5rem var(--page-margin);
    position: relative;
  }

  .pre-footer::before {
    content: '';
    position: absolute;
    top: 0;
    left: var(--page-margin);
    right: var(--page-margin);
    border-top: 1px solid #ebebeb;
  }

  .pre-footer-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1rem;
    align-items: start;
  }

  .pre-footer-heading {
    font-size: 1.875rem;
    line-height: 1.3;
    font-weight: 400;
  }

  .pre-footer-heading a {
    text-decoration: none;
    color: var(--color-text);
    opacity: 0.5;
    transition: opacity 0.2s ease;
  }

  .pre-footer-heading a:hover {
    opacity: 1;
  }

  .pre-footer-text {
    font-size: 0.875rem;
    line-height: 1.125rem;
    max-width: 32rem;
  }

  .pre-footer-text p {
    margin-bottom: 1rem;
  }

  .pre-footer-text p:last-child {
    margin-bottom: 0;
  }

  /* Footer styles */
  .footer {
    margin-top: 10rem;
    padding: 2.5rem var(--page-margin);
  }

  .footer-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .copyright,
  .footer-social {
    font-size: 0.875rem;
    line-height: 1.125rem;
    color: var(--color-text);
  }

  .footer-social a {
    text-decoration: none;
    color: var(--color-text);
  }

  .footer-social a:hover {
    opacity: 0.7;
  }

  @media (max-width: 768px) {
    .header {
      left: 1.5rem;
      right: 1.5rem;
      top: 2rem;  /* 2rem padding above nav on mobile */
    }

    .main {
      padding-top: calc(2rem * 2 + var(--spacing-md)); /* Adjusted for 2rem top padding */
    }

    .project-hero {
      height: 50vh;
    }

    .project-title {
      font-size: 2rem;
    }

    .project-description {
      font-size: 1.125rem;
    }

    .project-info,
    .project-content {
      padding-left: 1.5rem;
      padding-right: 1.5rem;
    }

    .pre-footer-content {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }

    .pre-footer-heading {
      font-size: 1.375rem;
    }

    .pre-footer {
      padding: 2.5rem 1.5rem;
    }

    .pre-footer::before {
      left: 1.5rem;
      right: 1.5rem;
    }

    .footer {
      padding: 2.5rem 1.5rem;
      margin-top: 6rem;
    }

    .footer-content {
      flex-direction: column;
      gap: var(--spacing-sm);
      text-align: center;
    }
  }
</style>
