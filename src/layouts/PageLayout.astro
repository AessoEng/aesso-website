---
import BaseLayout from './BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

export interface Props {
  title: string;
  description?: string;
  ogImage?: string;
  variant?: 'default' | 'fullwidth';
}

const { title, description, ogImage, variant = 'default' } = Astro.props;
---

<BaseLayout title={title} description={description} ogImage={ogImage}>
  <Header />
  <main class={variant === 'fullwidth' ? 'main main--fullwidth' : 'main'} id="main-content">
    <slot />
  </main>
  <Footer />
</BaseLayout>

<style>
  .main {
    /* Mobile first approach */
    padding: calc(var(--spacing-page-mobile-top) * 2 + var(--spacing-md)) var(--spacing-page-mobile) var(--spacing-page-mobile);
  }

  .main--fullwidth {
    /* Mobile first for fullwidth variant */
    padding: calc(var(--spacing-page-mobile-top) * 2 + var(--spacing-md)) var(--spacing-page-mobile) var(--spacing-page-mobile);
  }

  /* Small tablet and up */
  @media (min-width: 480px) {
    .main {
      padding-top: calc(var(--spacing-page) + 12.5rem);
    }
  }

  /* Tablet and up */
  @media (min-width: 768px) {
    .main {
      padding: calc(var(--spacing-page) + var(--spacing-hero)) var(--spacing-page) var(--spacing-page);
    }

    .main--fullwidth {
      padding: calc(var(--spacing-page) * 2 + var(--spacing-md)) var(--spacing-page) var(--spacing-page);
    }
  }
</style>