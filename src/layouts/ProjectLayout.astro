---
import BaseLayout from './BaseLayout.astro';
import SiteHeader from '../components/SiteHeader.astro';
import ContactSection from '../components/ContactSection.astro';
import SiteFooter from '../components/SiteFooter.astro';
import ProjectGallery, { type GalleryItem } from '../components/ProjectGallery.astro';

export interface Props {
  title: string;
  description: string;
  gallery: GalleryItem[];
  ogImage?: string;
}

const { title, description, gallery, ogImage } = Astro.props;
---

<BaseLayout title={`${title} - Aesso`} description={description} ogImage={ogImage}>
  <SiteHeader />

  <main class="project-main" id="main-content">
    <ProjectGallery items={gallery} />
    <slot />
  </main>

  <ContactSection />
  <SiteFooter />
</BaseLayout>

<style>
  .project-main {
    padding: calc(var(--page-margin) + var(--spacing-xl)) var(--page-margin) var(--page-margin);
  }

  @media (max-width: 768px) {
    .project-main {
      padding: calc(var(--page-margin) + 5rem) var(--spacing-md) var(--spacing-md);
    }
  }
</style>
