---
import PageLayout from '../layouts/PageLayout.astro';
import { getCDNUrl } from '../config/cdn';

// Import local images for optimization
import img2 from '../images/projects/destaire/destaire-2.avif?url';
import img3 from '../images/projects/destaire/destaire-3.avif?url';
import img4 from '../images/projects/destaire/destaire-4.avif?url';
import img5 from '../images/projects/destaire/destaire-5.avif?url';
import img6 from '../images/projects/destaire/destaire-6.avif?url';
import img7 from '../images/projects/destaire/destaire-7.avif?url';
import img8 from '../images/projects/destaire/destaire-8.avif?url';

---

<PageLayout title="Déstaire - Aesso" description="Branding, design and development work for Déstaire" variant="fullwidth">
    <div class="project-images">
      <video
        src={getCDNUrl('destaire/destaire-1.mp4')}
        autoplay
        loop
        muted
        playsinline
        preload="none"
        class="project-video"
      ></video>
      <img src={img2} alt="Déstaire project image 2" width="1200" height="675" loading="lazy" decoding="async" />
      <img src={img3} alt="Déstaire project image 3" width="1200" height="675" loading="lazy" decoding="async" />
      <img src={img4} alt="Déstaire project image 4" width="1200" height="675" loading="lazy" decoding="async" />
      <img src={img5} alt="Déstaire project image 5" width="1200" height="675" loading="lazy" decoding="async" />
      <img src={img6} alt="Déstaire project image 6" width="1200" height="675" loading="lazy" decoding="async" />
      <img src={img7} alt="Déstaire project image 7" width="1200" height="675" loading="lazy" decoding="async" />
      <img src={img8} alt="Déstaire project image 8" width="1200" height="675" loading="lazy" decoding="async" />
    </div>
</PageLayout>

<style>
  @import '../styles/global.css';

  .project-images {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .project-images img,
  .project-video {
    width: 100%;
    height: auto;
    aspect-ratio: 16 / 9;
    object-fit: cover;
    background: #f5f5f5;
    display: block;
  }


  @media (max-width: 768px) {

  }
</style>
