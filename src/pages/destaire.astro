---
import ProjectLayout from '../layouts/ProjectLayout.astro';
import destaVideo from '../assets/destaire/destaire-1.mp4';
import desta2 from '../assets/destaire/destaire-2.avif';
import desta3 from '../assets/destaire/destaire-3.avif';
import desta4 from '../assets/destaire/destaire-4.avif';
import desta5 from '../assets/destaire/destaire-5.avif';
import desta6 from '../assets/destaire/destaire-6.avif';
import desta7 from '../assets/destaire/destaire-7.avif';
import desta8 from '../assets/destaire/destaire-8.avif';

const gallery = [
  { type: 'video', src: destaVideo, poster: desta2, preload: 'metadata' } as const,
  { type: 'image', asset: desta2, alt: 'Déstaire project image 2', loading: 'eager' } as const,
  { type: 'image', asset: desta3, alt: 'Déstaire project image 3' } as const,
  { type: 'image', asset: desta4, alt: 'Déstaire project image 4' } as const,
  { type: 'image', asset: desta5, alt: 'Déstaire project image 5' } as const,
  { type: 'image', asset: desta6, alt: 'Déstaire project image 6' } as const,
  { type: 'image', asset: desta7, alt: 'Déstaire project image 7' } as const,
  { type: 'image', asset: desta8, alt: 'Déstaire project image 8' } as const
];
---

<ProjectLayout
  title="Déstaire"
  description="Branding, design and development work for Déstaire"
  gallery={gallery}
/>
