---
import PageLayout from '../layouts/PageLayout.astro';
import { getCDNUrl } from '../config/cdn';

// Import local images for optimization
import img1 from '../images/projects/mail/mail-1.webp?url';
import img3 from '../images/projects/mail/mail-3.webp?url';
import img4 from '../images/projects/mail/mail-4.webp?url';
import img5 from '../images/projects/mail/mail-5.webp?url';
import img7 from '../images/projects/mail/mail-7.webp?url';

---

<PageLayout title="Mail - Aesso" description="Product development and native app design for Mail" variant="fullwidth">
    <div class="project-images">
      <img src={img1} alt="Mail project image 1" width="1200" height="675" loading="eager" fetchpriority="high" decoding="async" />
      <video
        src={getCDNUrl('mail/mail-2.mov')}
        autoplay
        loop
        muted
        playsinline
        preload="none"
        class="project-video"
      ></video>
      <img src={img3} alt="Mail project image 3" width="1200" height="675" loading="lazy" decoding="async" />
      <img src={img4} alt="Mail project image 4" width="1200" height="675" loading="lazy" decoding="async" />
      <img src={img5} alt="Mail project image 5" width="1200" height="675" loading="lazy" decoding="async" />
      <video
        src={getCDNUrl('mail/mail-6.mov')}
        autoplay
        loop
        muted
        playsinline
        preload="none"
        class="project-video"
      ></video>
      <img src={img7} alt="Mail project image 7" width="1200" height="675" loading="lazy" decoding="async" />
    </div>
</PageLayout>

<style>
  @import '../styles/global.css';

  .project-images {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .project-images img,
  .project-video {
    width: 100%;
    height: auto;
    aspect-ratio: 16 / 9;
    object-fit: cover;
    background: #f5f5f5;
    display: block;
  }


  @media (max-width: 768px) {

  }
</style>
