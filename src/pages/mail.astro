---
import ProjectLayout from '../layouts/ProjectLayout.astro';
import mail1 from '../assets/mail/mail-1.webp';
import mail2Video from '../assets/mail/mail-2.mov';
import mail3 from '../assets/mail/mail-3.webp';
import mail4 from '../assets/mail/mail-4.webp';
import mail5 from '../assets/mail/mail-5.webp';
import mail6Video from '../assets/mail/mail-6.mov';
import mail7 from '../assets/mail/mail-7.webp';

const gallery = [
  { type: 'image', asset: mail1, alt: 'Mail project image 1', loading: 'eager' } as const,
  { type: 'video', src: mail2Video, poster: mail1 } as const,
  { type: 'image', asset: mail3, alt: 'Mail project image 3' } as const,
  { type: 'image', asset: mail4, alt: 'Mail project image 4' } as const,
  { type: 'image', asset: mail5, alt: 'Mail project image 5' } as const,
  { type: 'video', src: mail6Video, poster: mail3 } as const,
  { type: 'image', asset: mail7, alt: 'Mail project image 7' } as const
];
---

<ProjectLayout
  title="Mail"
  description="Product development and native app design for Mail"
  gallery={gallery}
/>
