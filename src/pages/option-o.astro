---
import ProjectLayout from '../layouts/ProjectLayout.astro';
import optionO1 from '../assets/option-o/option-o-1.webp';
import optionO2Video from '../assets/option-o/option-o-2.mov';
import optionO3 from '../assets/option-o/option-o-3.webp';
import optionO4 from '../assets/option-o/option-o-4.webp';
import optionO5 from '../assets/option-o/option-o-5.webp';
import optionO6 from '../assets/option-o/option-o-6.webp';
import optionO7 from '../assets/option-o/option-o-7.webp';
import optionO8 from '../assets/option-o/option-o-8.webp';

const gallery = [
  { type: 'image', asset: optionO1, alt: 'Option O project image 1', loading: 'eager' } as const,
  { type: 'video', src: optionO2Video, poster: optionO1 } as const,
  { type: 'image', asset: optionO3, alt: 'Option O project image 3' } as const,
  { type: 'image', asset: optionO4, alt: 'Option O project image 4' } as const,
  { type: 'image', asset: optionO5, alt: 'Option O project image 5' } as const,
  { type: 'image', asset: optionO6, alt: 'Option O project image 6' } as const,
  { type: 'image', asset: optionO7, alt: 'Option O project image 7' } as const,
  { type: 'image', asset: optionO8, alt: 'Option O project image 8' } as const
];
---

<ProjectLayout
  title="Option O"
  description="Web design explorations for Option O"
  gallery={gallery}
/>
