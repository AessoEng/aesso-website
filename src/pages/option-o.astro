---
import PageLayout from '../layouts/PageLayout.astro';
import { getCDNUrl } from '../config/cdn';

// Import local images for optimization
import img1 from '../images/projects/option-o/option-o-1.webp?url';
import img3 from '../images/projects/option-o/option-o-3.webp?url';
import img4 from '../images/projects/option-o/option-o-4.webp?url';
import img5 from '../images/projects/option-o/option-o-5.webp?url';
import img6 from '../images/projects/option-o/option-o-6.webp?url';
import img7 from '../images/projects/option-o/option-o-7.webp?url';
import img8 from '../images/projects/option-o/option-o-8.webp?url';

---

<PageLayout title="Option O - Aesso" description="Web design explorations for Option O" variant="fullwidth">
    <div class="project-images">
      <img src={img1} alt="Option O project image 1" width="1200" height="675" loading="eager" fetchpriority="high" decoding="async" />
      <video
        src={getCDNUrl('option-o/option-o-2.mov')}
        autoplay
        loop
        muted
        playsinline
        preload="none"
        class="project-video"
      ></video>
      <img src={img3} alt="Option O project image 3" width="1200" height="675" loading="lazy" decoding="async" />
      <img src={img4} alt="Option O project image 4" width="1200" height="675" loading="lazy" decoding="async" />
      <img src={img5} alt="Option O project image 5" width="1200" height="675" loading="lazy" decoding="async" />
      <img src={img6} alt="Option O project image 6" width="1200" height="675" loading="lazy" decoding="async" />
      <img src={img7} alt="Option O project image 7" width="1200" height="675" loading="lazy" decoding="async" />
      <img src={img8} alt="Option O project image 8" width="1200" height="675" loading="lazy" decoding="async" />
    </div>
</PageLayout>

<style>
  @import '../styles/global.css';

  .project-images {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .project-images img,
  .project-video {
    width: 100%;
    height: auto;
    aspect-ratio: 16 / 9;
    object-fit: cover;
    background: #f5f5f5;
    display: block;
  }



  @media (max-width: 768px) {

  }
</style>
